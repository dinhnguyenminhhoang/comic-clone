  <body>
    <div>
      <img
        src="https://bnz06pap002files.storage.live.com/y4mnXsxOtjPu30qcfLZXZyPXL8MW4KQT885VHegI7SlkC6HquEho5JN5-BWv1q-CsMbONlzWtuwaav6iSB_pdfmw47O3aHBp0LQBKnEbYquXSrf77Xy9uCjNGO6q2g8tL2hlpJMF33Ms6OEkjBmbUOU2CphJGiBtYkaupHoxHyguLC_fj9j1NUbeM3JknUCMImVNdnFu6mlrpmpJheYX46tb0svLkI2tuhR1--y5zkOH6s?encodeFailures=1&width=215&height=322"
        alt="test"
      />
      <div class="container">
        <h1 class="mb-4">Thêm mới người dùng</h1>
        <form action="/create-user" method="post">
          <div class="mb-3">
            <label for="email" class="form-label">email:</label>
            <input
              type="text"
              class="form-control"
              id="email"
              placeholder="Nhập email"
              name="email"
            />
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">password:</label>
            <input
              type="password"
              class="form-control"
              id="password"
              placeholder="Nhập password"
              name="password"
            />
          </div>
          <div class="mb-3">
            <label for="firstName" class="form-label">Họ:</label>
            <input
              type="text"
              class="form-control"
              id="firstName"
              placeholder="Nhập họ"
              name="firstName"
            />
          </div>
          <div class="mb-3">
            <label for="lastName" class="form-label">Tên:</label>
            <input
              type="text"
              class="form-control"
              id="lastName"
              placeholder="Nhập tên"
              name="lastName"
            />
          </div>
          <div class="mb-3">
            <label for="address" class="form-label">Địa chỉ:</label>
            <input
              type="text"
              class="form-control"
              id="address"
              placeholder="Nhập địa chỉ"
              name="address"
            />
          </div>
          <div class="mb-3">
            <label for="gender" class="form-label">Giới tính:</label>
            <select class="form-select" id="gender">
              <option value="male">Nam</option>
              <option value="female">Nữ</option>
            </select>
          </div>
          <div class="mb-3">
            <label for="phoneNumber" class="form-label">Số điện thoại:</label>
            <input
              type="tel"
              class="form-control"
              id="phoneNumber"
              placeholder="Nhập số điện thoại"
              name="phoneNumber"
            />
          </div>
          <button class="btn btn-primary">Thêm mới</button>
        </form>
      </div>

      <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"
      ></script>
    </div>
